@page
@model EnrollDistribution
@{
    ViewData["Title"] = "Home page";
}
<main>

    <div class="col-lg-4 col-md-6">
        <div class="card h-100">
            <div class="card-header pb-0">
                <h6>Benefício concedido com sucesso!</h6>
                <p class="text-sm">
                    <i class="fa fa-arrow-up text-success" aria-hidden="true"></i>
                    <span class="font-weight-bold">Verifique abaixo</span> detalhes para a retirada do seu benefício
                </p>
            </div>
            <div class="card-body p-3">
                <div class="timeline timeline-one-side">
                    <div class="timeline-block mb-3">
                        <span class="timeline-step">
                            <i class="ni ni-bell-55 text-success text-gradient"></i>
                        </span>
                        <div class="timeline-content">
                            <h6 class="text-dark text-sm font-weight-bold mb-0">Retire em @Model.Distribution.StartsAt.ToString("dd/MM/yyyy HH:mm")</h6>
                            <p class="text-secondary font-weight-bold text-xs mt-1 mb-0">Não será atrase. Pode haver filas no dia</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>