@page
@model Login

@{
    Layout = "_Layout";
}

<main class="main-content  mt-0">
    <section>
        <div class="page-header min-vh-75">
            <div class="container">
                <div class="row">
                    <div class="col-xl-4 col-lg-5 col-md-6 d-flex flex-column mx-auto">
                        <div class="card card-plain mt-8">
                            <div class="card-header pb-0 text-left bg-transparent">
                                <h3 class="font-weight-bolder text-brand">Bem vindo</h3>
                                <p class="mb-0 text-white">Entre para ver as distribuições disponíveis</p>

                                <div class="card-footer text-center pt-0 px-lg-2 px-1">
                                    <p class="mb-4 text-sm mx-auto text-white">
                                        Não tem conta?
                                        <a href="/quero/@Model.OrganizationRouteSlug/register" class="text-brand font-weight-bold">Crie uma agora</a>
                                    </p>
                                </div>
                            </div>
                            <div class="card-body">
                                <form role="form" method="post" action="">
                                    @Html.AntiForgeryToken()
                                    <label class="text-white">CPF</label>
                                    <div class="mb-3">
                                        <input name="document" type="text" class="form-control" placeholder="CPF" aria-label="CPF" aria-describedby="document-addon">
                                    </div>
                                    <label class="text-white">Password</label>
                                    <div class="mb-3">
                                        <input name="birthDate" type="date" class="form-control" placeholder="Data de nascimento" aria-label="Data de nascimento" aria-describedby="birthDate-addon">
                                    </div>
                                    @* <div class="form-check form-switch"> *@
                                    @*     <input class="form-check-input" type="checkbox" id="rememberMe" checked=""> *@
                                    @*     <label class="form-check-label" for="rememberMe">Remember me</label> *@
                                    @* </div> *@
                                    <div class="text-center">
                                        <button class="btn  w-100 mt-4 mb-0" style="background-color: #F73558; color: white">Entrar</button>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="oblique position-absolute top-0 h-100 d-md-block d-none me-n8">
                            <div class="oblique-image bg-cover position-absolute fixed-top ms-auto h-100 z-index-0 ms-n6" style="background-image:url('img/curved-images/curved6.jpg')"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>